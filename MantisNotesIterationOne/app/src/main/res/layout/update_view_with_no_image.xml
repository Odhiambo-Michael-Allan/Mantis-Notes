<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/normal_layout_margin"
    android:padding="@dimen/normal_padding"
    app:cardCornerRadius="@dimen/cardview_default_radius">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/update_view_with_no_image_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample_title"
            android:textSize="@dimen/title_size"
            android:layout_margin="@dimen/normal_layout_margin"
            android:padding="@dimen/normal_padding"
            android:maxLines="5"
            android:ellipsize="end"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/update_view_with_no_image_highlight_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample_highlight"
            android:layout_margin="@dimen/normal_layout_margin"
            android:padding="@dimen/normal_padding"
            android:maxLines="5"
            android:ellipsize="end"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/update_view_with_no_image_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_time"
            android:padding="@dimen/normal_padding"
            android:layout_marginStart="@dimen/normal_layout_margin"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>