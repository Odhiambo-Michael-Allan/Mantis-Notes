<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    android:layout_margin="@dimen/normal_layout_margin"
    android:padding="@dimen/normal_padding" >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/update_view_for_one_story_with_highlight_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/sample_image"
            android:layout_margin="@dimen/normal_layout_margin" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/update_view_for_one_story_with_highlight_headline_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:ellipsize="end"
            android:textSize="@dimen/title_size"
            android:text="@string/sample_title"
            android:padding="@dimen/normal_padding"
            android:layout_marginStart="@dimen/normal_layout_margin" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/update_view_for_one_story_with_highlight_highlight_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:ellipsize="end"
            android:text="@string/sample_highlight"
            android:padding="@dimen/normal_padding"
            android:layout_marginStart="@dimen/normal_layout_margin" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>